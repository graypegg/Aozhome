<div id="<%= dom_id thing %>">
  <h2>
    <%= pluralize thing.quantity, thing.name %>
  </h2>
  <div>
    <%= thing.description %>
  </div>
  <div>
    <%= thing.price %> <%= thing.currency %>
  </div>
  <div>
    <%= thing.weight %>g
  </div>
  <div>
    Purchased <%= time_tag thing.purchase_date, time_ago_in_words(thing.purchase_date) %> ago
  </div>
</div>
